<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/coinsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coins:"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/adsWatchedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ads Watched:"
            android:textSize="18sp"
            android:padding="8dp" />

        <!--<TextView
            android:id="@+id/referralCodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referral Code:"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/referredByTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referred By:"
            android:textSize="18sp"
            android:padding="8dp" />-->

    </LinearLayout>
</ScrollView>
