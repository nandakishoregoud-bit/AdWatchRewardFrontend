<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_margin="8dp"
    android:radius="8dp">

    <TextView
        android:id="@+id/tvQuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvQuestionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a sample description for the flagged question."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tvQuestionCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category: General"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/tvQuestionOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner "
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tvQuestionLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes: 10"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvQuestionDislikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dislikes: 2"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/tvQuestionUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated At: "
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>
