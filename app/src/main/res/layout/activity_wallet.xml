<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: 0.000"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/pointsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Points"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/rewardTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/paymentDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/upiEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UPI ID"/>

        <EditText
            android:id="@+id/bankAccountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank Account Number"/>

        <EditText
            android:id="@+id/bankIfscEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank IFSC Code"/>

        <EditText
            android:id="@+id/paypalEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PayPal Email"/>

        <EditText
            android:id="@+id/amazonPayEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amazon Pay Number"/>
    </LinearLayout>

    <Button
        android:id="@+id/redeemButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background" />

    <TextView
        android:id="@+id/tv_ads_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ads Watched Today: 0"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/successCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/holo_green_light"
        android:padding="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/successMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdrawal request submitted successfully!"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>
